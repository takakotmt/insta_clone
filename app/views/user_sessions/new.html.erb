<div class="container">
  <div class="card w-50 mx-auto rounded-0">
  <h1>Login</h1>
  <%= form_with url: login_path, method: :post do |f| %>
    <div>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Login" %>
    </div>
  <% end %>
  <%= link_to 'Sing Up', new_user_path %>
  </div>
</div>